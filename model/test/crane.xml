<mujoco model="Rope">
    <include file="scene.xml"/>

  <option timestep="0.001" jacobian="dense"/>
  <size nconmax="500" njmax="1500" nkey="1"/>
  <default>
    <geom solref="1e-2 5" solimp=".5 .99 1e-3" friction=".5"/>
  </default>

  <worldbody>
    <light pos=".5 0 2"/>
    <!-- <geom type="box" pos="0 0 -1" size="10 10 0.03" rgba="1 1 1 1"/> -->
    <body name="payload" pos="0 0 0.2">
        <geom type="box" size=".05 .05 .05" rgba=".5 .2 .8 1" mass="0"/>
        <freejoint/>
         <geom type="cylinder" size=".05 .05" density="100"  rgba=".5 .2 .2 .5"/>
        <site name="cable_end" pos="0 0 0.05" size="0.01" rgba="1 0 0 1"/>
    </body>
    <body name="beam" pos="0 0 1.2" quat="0 1 0 1">
        <!-- <geom type="box" size=".45 .0375 .0375" mass="10"/> -->

        <body name="slider" pos="0 0 .05">
        <geom name="crane" type="cylinder" size=".08 .2 .08" rgba="0 1 0 1" mass="10"/>
        <site name="cable_begin" pos="-0.082 0 0" size="0.01" rgba="1 0 0 1"/>
        <joint name="pin" type="hinge" axis="0 0 1" pos="0 0 0" damping="1"/>
        <!-- <joint name="jslider" type="slide" axis="1 0 0" damping=".1" limited="true" range="-.25 .25"/> -->
        <!-- <joint name="jslider2" type="slide" axis="0 1 0" damping=".1" limited="true" range="-.25 .25"/> -->
        </body>
    </body>
  </worldbody>

    <tendon>
        <spatial name="tendon_cable" limited="true" springlength="0.5" range="0 0.5" solimplimit="0.001 0.001 0.001 0.5 1" solreflimit="-100 -0" damping="50">
            <site site="cable_begin"/>
            <geom geom="crane"/>
            <site site="cable_end"/>

        </spatial>
    </tendon>

  <actuator>
    <!-- <velocity name="slider" joint="jslider"/> -->
    <!-- <position name="slider" joint="jslider"/> -->
    <!-- <position name="slider" joint="jslider2"/> -->
    <motor name="motor" joint="pin" gear="1" ctrllimited="true" ctrlrange="-10 10"/>
  </actuator>

</mujoco>  

